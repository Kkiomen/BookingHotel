<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reservationTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp" android:layout_marginStart="10dp"/>
        <TextView
                android:text="TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/reservationDesctiption"
                app:layout_constraintTop_toBottomOf="@+id/reservationTitle"
                android:layout_marginTop="10dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@+id/reservationTitle"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>