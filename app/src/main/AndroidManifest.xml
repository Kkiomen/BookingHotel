<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.bookinghotel">

    <application
        android:allowBackup="true"
        android:taskAffinity=".string"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".RoomBookingApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookingHotel">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.dashboard.main.MainDashboardActivity">
        </activity>
        <activity android:name=".ui.dashboard.home.detailed_information.DetailedInformationActivity">
        </activity>
    </application>

</manifest>